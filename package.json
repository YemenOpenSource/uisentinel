{
  "name": "uisentinel",
  "version": "0.2.1",
  "description": "Visual validation toolkit for AI coding agents - see what you build",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "uisentinel": "./dist/cli.js",
    "uisentinel-mcp": "./dist/mcp/server.js"
  },
  "files": [
    "dist/",
    "src/",
    ".github/chatmodes/",
    "README.md",
    "LICENSE",
    "uisentinel.config.example.js"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "example:simple": "node examples/simple-example.js",
    "example:complete": "node examples/complete-example.js",
    "example:advanced": "node examples/advanced-capture-demo.js",
    "example:zoom": "node examples/zoom-capture-demo.js",
    "example:inspector": "node examples/inspector-demo.js",
    "example:workflow": "node examples/integrated-workflow.js",
    "example:capture": "node examples/capture-with-metadata-demo.js",
    "demo": "cd demo && npx serve . -l 3000",
    "validate:ui": "node dist/cli.js validate --project . --agent-mode",
    "validate:quick": "node dist/cli.js capture --url http://localhost:3000 --a11y"
  },
  "keywords": [
    "playwright",
    "visual-testing",
    "ai-agents",
    "github-copilot",
    "claude-code",
    "cursor",
    "mcp",
    "model-context-protocol",
    "ui-testing",
    "screenshot",
    "accessibility",
    "wcag",
    "a11y",
    "visual-validation",
    "web-ui",
    "testing",
    "automation",
    "ai-coding",
    "copilot",
    "browser-extensions",
    "element-inspector"
  ],
  "author": "mhjabreel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mhjabreel/uisentinel.git"
  },
  "bugs": {
    "url": "https://github.com/mhjabreel/uisentinel/issues"
  },
  "homepage": "https://github.com/mhjabreel/uisentinel#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.8.3",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "detect-port": "^1.5.1",
    "ora": "^5.4.1",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.40.0",
    "pngjs": "^7.0.0",
    "sharp": "^0.33.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "jest": "^29.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
