{
  "name": "uisentinel",
  "version": "0.2.0-alpha.0",
  "description": "Visual validation toolkit for AI coding agents - see what you build",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "uisentinel": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "src/",
    ".github/chatmodes/",
    "README.md",
    "LICENSE",
    "uisentinel.config.example.js"
  ],
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "mkdir -p dist/templates && cp src/templates/*.md dist/templates/",
    "dev": "tsc --watch",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "demo": "cd demo && npx serve . -l 3000"
  },
  "keywords": [
    "playwright",
    "visual-testing",
    "ai-agents",
    "github-copilot",
    "claude-code",
    "ui-testing",
    "screenshot",
    "accessibility",
    "wcag",
    "a11y",
    "visual-validation",
    "web-ui",
    "testing",
    "automation",
    "ai-coding",
    "responsive-design",
    "element-inspector"
  ],
  "author": "mhjabreel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mhjabreel/uisentinel.git"
  },
  "bugs": {
    "url": "https://github.com/mhjabreel/uisentinel/issues"
  },
  "homepage": "https://github.com/mhjabreel/uisentinel#readme",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "@types/prompts": "^2.4.9",
    "axe-core": "^4.8.3",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "detect-port": "^1.5.1",
    "ora": "^5.4.1",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.40.0",
    "pngjs": "^7.0.0",
    "prompts": "^2.4.2",
    "sharp": "^0.33.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "jest": "^29.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
